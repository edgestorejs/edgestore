{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.stickyScroll.enabled": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "eslint.workingDirectories": [
    { "pattern": "./examples/**" },
    { "pattern": "./packages/*" },
    { "pattern": "./docs/*" }
  ],
  // "files.exclude": {
  //   "packages/server/{adapters,core,providers}": true
  // },

  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.tsserver.projectReferences": true,
  "typescript.tsserver.useSyntaxServer": "auto",
  "typescript.tsconfig": "tsconfig.dev.json",
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#c87208",
    "titleBar.activeForeground": "#ffffff",
    "titleBar.inactiveBackground": "#703e01",
    "titleBar.inactiveForeground": "#ab640e"
  }
}

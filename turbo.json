{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV", "ROLLUP_WATCH"],
  "tasks": {
    "codegen:entrypoints": {
      "outputs": [
        "server/**",
        "core/**",
        "adapters/**",
        "providers/**",
        "package.json"
      ]
    },
    "build": {
      "dependsOn": ["^build", "codegen:entrypoints"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "watch": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}

{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "codegen:entrypoints": {
      "outputs": [
        "server/**",
        "core/**",
        "adapters/**",
        "providers/**",
        "package.json"
      ]
    },
    "build": {
      "dependsOn": ["^build", "codegen:entrypoints"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "watch": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
